<nav class="nav">
 <header class="nav__brand">
 <a href="#">Everflow Weather Forecast Dashboard</a></header>
 <form class="nav__form" @onsubmit="OnSubmit">
 <input @bind-value="@State.AppState.SearchInput" type="search" class="nav__search" placeholder="Search">
 <button type="submit" class="nav__searchbtn"><i class="bi bi-search"></i></button>
 </form>
</nav>

@code {
 [CascadingParameter]
 public CascadingAppStateProvider? State { get; set; }

 private async Task OnSubmit(SubmitEventArgs args)
 {
     // Prevent the default behavior of form submission
     args.PreventDefault();

     // Update the app state with the search input value
     State!.AppState!.UpdateSearchInput(this, State.AppState.SearchInput);
 }
}
